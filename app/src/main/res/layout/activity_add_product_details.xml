<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tint1"
    android:padding="6sp"
    tools:context=".Cat_and_Sub.Product.ActivityAddProductDetails">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/CatProSpinner"
        android:layout_width="160sp"

        android:layout_marginLeft="40sp"
        android:layout_height="25sp"
        android:layout_marginTop="25sp" />
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/SubProSpinner"
        android:layout_width="160sp"
        android:layout_marginLeft="40sp"

        android:layout_height="25sp"
        android:layout_marginTop="25sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="40sp"
        android:elevation="15sp">
        <ImageView
            android:layout_width="135dp"
            android:layout_height="132dp"
            android:padding="45sp"
            android:layout_marginTop="-20sp"
            android:id="@+id/imgEdit"
            android:layout_marginLeft="270sp"
            android:src="@drawable/edit_241" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="167dp"
            android:layout_marginHorizontal="6.0sp"
            android:layout_marginTop="10sp"
            android:textColorHint="@color/black"
            app:boxBackgroundColor="@color/bg_grey"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
            app:hintTextColor="@color/black">


            <ImageView
                android:id="@+id/imageC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20sp"
                android:src="@drawable/chanel"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter_Product_name"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/ad2"
        android:layout_marginTop="20sp"
        app:hintTextColor="@color/black"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:hintAnimationEnabled="true"
        android:layout_marginHorizontal="6.0sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etNamePro"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="left"
            android:inputType="textCapWords"
            android:maxLength="200"
            android:hint=""
            android:textColor="@color/black"
            android:textSize="19sp"
            tools:ignore="InvalidId"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="210sp"
        android:layout_height="wrap_content"
        android:hint="Enter_Price"
        android:textColorHint="@color/black"
        android:layout_marginTop="10sp"
        app:boxBackgroundColor="@color/ad2"
        app:hintTextColor="@color/black"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:hintAnimationEnabled="true"
        android:layout_marginHorizontal="6.0sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPrice"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="left"
            android:inputType="textCapWords"
            android:maxLength="200"
            android:hint=""
            android:textColor="@color/black"
            android:textSize="19sp"
            tools:ignore="InvalidId"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchVeg"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:thumbTint="@color/black"
        android:layout_marginLeft="260sp"
        android:layout_marginTop="-60sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veg"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="220sp"
        android:layout_marginTop="-35sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-Veg"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="310sp"
        android:layout_marginTop="-25sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter_Description"
        android:layout_marginTop="30sp"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="@color/ad2"
        app:hintTextColor="@color/black"
        app:hintTextAppearance="@style/TextAppearance.AppCompat.Caption"
        app:hintAnimationEnabled="true"
        android:layout_marginHorizontal="6.0sp">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etDesc"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:gravity="left"
            android:inputType="textCapWords"
            android:maxLength="200"
            android:hint=""
            android:textColor="@color/black"
            android:textSize="19sp"
            tools:ignore="InvalidId"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btnCancel"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:layout_marginTop="30sp"
        android:padding="10sp"
        android:layout_marginRight="220sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/ad1"
     />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginLeft="220sp"
        android:textSize="20sp"
        android:id="@+id/btnSubmit"
        android:layout_marginTop="-55sp"
        android:padding="10sp"
        android:layout_marginRight="10sp"
        android:textColor="@color/black"
        android:backgroundTint="@color/green"/>


</LinearLayout>