<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/img11"
    android:padding="42sp"
    android:layout_height="match_parent"
    tools:context=".Cat_and_Sub.MargeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        app:cardCornerRadius="15sp"
        android:elevation="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="Your_UserName..."
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginLeft="15sp"
            android:textSize="30sp"
            android:background="@color/ad1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="90sp"
        android:layout_marginLeft="80sp"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:textSize="28sp"
        android:background="@color/white"
        android:textColorHint="@color/black"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_marginTop="80sp"
        android:background="@drawable/img11"
        app:cardCornerRadius="10sp"
        android:elevation="10sp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:id="@+id/cat1"
        android:layout_marginTop="10sp"
        android:text="Category"
        android:textSize="25sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sub1"
        android:layout_marginTop="70sp"
        android:text="Sub_Category"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:textSize="25sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product1"
            android:layout_marginTop="130sp"
            android:text="Product"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:textSize="25sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ceta1"
            android:layout_marginTop="185sp"
            android:text="CataLog"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:textSize="25sp"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>